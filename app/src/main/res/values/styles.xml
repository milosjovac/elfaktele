<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#222222</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="White">
        <item name="android:textColor">@color/white</item>
